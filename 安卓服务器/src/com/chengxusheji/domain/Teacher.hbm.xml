<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Teacher" table="Teacher">

          <!-- 主键教师编号 -->
          <id name="teacherNumber" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="name"
            column="name"
            type="string"
            length="12"
          />

          <!-- 简单字符串属性: 性别 -->
          <property
            name="sex"
            column="sex"
            type="string"
            length="4"
          />

          <!-- 简单日期型属性: 出生日期 -->
          <property
            name="birthday"
            column="birthday"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单图片属性: 教师照片 -->
          <property
            name="photo"
            column="photo"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 职称 -->
          <property
            name="professName"
            column="professName"
            type="string"
            length="12"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 家庭地址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="80"
          />

          <!-- 简单日期型属性: 入职日期 -->
          <property
            name="inDate"
            column="inDate"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单字符串属性: 教师简介 -->
          <property
            name="introduce"
            column="introduce"
            type="string"
            length="500"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
